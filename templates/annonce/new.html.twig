{% extends 'base.html.twig' %}

{% block title %}New Annonce{% endblock %}

{% block body %}
    	<h1 class="mx-auto text-center">Create new Annonce</h1>

    {# {{ include('annonce/_form.html.twig') }} #}
    <div class="text-center">
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="col-6 mx-auto">
        <div class="row">
            {{ form_row(form.titre) }}
        </div>
        <div class="row" id="some-custom-id">
            {{ form_row(form.description) }}
        </div>
        <div class="row">
            {{ form_row(form.prix) }}
        </div>
        <div class="row">
            {{ form_row(form.photo) }}
        </div>
        <div class="row">
            {{ form_row(form.categorie, {label_attr: {class: 'radio-custom'} }) }}
        </div>
        <div class="row">
            {{ form_row(form.type, {label_attr: {class: 'radio-custom'} }) }}
        </div>
        <div>
            <button type="submit" class="btn">Publier</button>
        </div>
    </div>
	{{ form_end(form) }}
	</div>

    <a href="{{ path('annonce_index') }}">back to list</a>
{% endblock %}
