{% extends 'base.html.twig' %}

{% block title %}Nouvelle Annonce{% endblock %}

{% block body %}
    	<h1 class="mx-auto text-center">Créer une nouvelle annonce</h1>

    {# {{ include('annonce/_form.html.twig') }} #}
    <div class="text-center">
    {{ form_start(annonceForm) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(annonceForm) }}
    </div>

    <div class="col-6 mx-auto">
        <div class="row">
            {{ form_row(annonceForm.titre) }}
        </div>
        <div class="row" id="some-custom-id">
            {{ form_row(annonceForm.description) }}
        </div>
        <div class="row">
            {{ form_row(annonceForm.prix) }}
        </div>
        <div class="row">
            {{ form_row(annonceForm.photoFile) }}
            {# <img src="{{ asset('/annonce/photo/' ~ annonce.photo) }}"> #}
            {# <img src="{{ vich_uploader_asset(annonce, 'photoFile') }}"> #}
            {# <img src="{{ asset(vich_uploader_asset(annonce, 'photoFile')) }}" alt="" height="60" /> #}
        </div>
        <div class="row">
            {{ form_row(annonceForm.categorie) }}
            {# {{ form_row(annonceForm.categorie, { label: "Catégorie (vente ou location)" }) }} #}
        </div>
        <div class="row">
            {{ form_row(annonceForm.type) }}
            {# {{ form_row(annonceForm.type, { label: "Type (maison ou appartement)" }) }} #}
        </div>
        <div>
            <button type="submit" class="btn">Publier</button>
        </div>
    </div>
	{{ form_end(annonceForm) }}
	</div>

    <a href="{{ path('annonce_index') }}">Retour aux annonces</a>
{% endblock %}
{% block javascript %}
<script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
{% endblock %}